<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div>
      <img class="mx-auto h-20 w-auto" src="/assets/logo-icon.png">
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Join us!</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "mt-8 space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <input type="hidden" name="remember" value="true">
      <div class="-space-y-px rounded-md shadow-sm">
        <div>
          <%= f.label :email, "Email address", class: "sr-only" %>
          <%= f.email_field :email, required: true, id: "email-address", autocomplete: "email", class: "relative block w-full rounded-t-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "Email address" %>
        </div>
        <div>
          <%= f.label :password, "Password", class: "sr-only" %>
          <%= f.password_field :password, required: true, id: "password", autocomplete: "new-password", class: "relative block w-full border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "Password" %>
        </div>
        <div>
          <%= f.label :password_confirmation, "Password confirmation", class: "sr-only" %>
          <%= f.password_field :password_confirmation, required: true, id: "password-confirmation", autocomplete: "new-password", class: "relative block w-full rounded-b-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "Confirm password" %>
        </div>
      </div>

      <div>
        <button type="submit" class="group relative flex w-full justify-center rounded-md bg-indigo-500 py-2 px-3 text-sm font-semibold text-white hover:bg-indigo-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
          Sign up
        </button>
      </div>
    <% end %>
    </form>
    <p class="block text-sm text-gray-900"> Already have an account?
      <%- if controller_name != 'sessions' %>
        <%= link_to "Sign in", new_session_path(resource_name), class: "font-medium text-indigo-500 hover:text-indigo-600" %><br />
      <% end %>
    </p>
  </div>
</div>