<h2 class="">Dashboard</h2>
<% if @weather_reports.empty? %>
  <div class="flex items-center justify-center h-full">
    <%= link_to new_weather_report_path, class: "border-dashed border-2 border-gray-300 hover:border-gray-400 rounded-lg p-6 px-32", data: { turbo_frame: "modal" } do %>
      <div class="flex flex-col items-center">
        <div class="flex items-center justify-center h-20 w-20 mx-auto">
          <span class="text-gray-400 text-4xl">+</span>
        </div>
        <h3 class="text-xl font-semibold">No recent searches</h3>
        <p class="text-gray-500 mt-2 pb-10">Get started by creating a new search</p>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    <%= render @weather_reports %>
  </div>
<%end%>

