<div class="weather-card mt-8">
  <div class="border-b border-gray-200 bg-white px-4 py-5 shadow-sm ring-1 ring-gray-900/5 rounded-t-xl sm:px-6">
    <div class="-ml-4 -mt-2 flex flex-wrap items-center justify-between sm:flex-nowrap">
      <div class="ml-4 mt-2">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Recent searches</h3>
      </div>
      <div class="ml-4 mt-2 flex-shrink-0">
        <%= button_to new_weather_report_path, method: :get, class: "relative inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600", data: { turbo_frame: "modal" } do %>
          Add +
        <% end %>
      </div>
    </div>
  </div>
  <% if @weather_reports.empty? %>
    <div class="flex justify-center" id="empty_box">
      <%= link_to new_weather_report_path, class: "w-full border-dashed border-2 border-gray-300 hover:border-gray-400 rounded-lg p-6 px-32", data: { turbo_frame: "modal" } do %>
        <div class="flex flex-col items-center">
          <div class="flex items-center justify-center h-20 mx-auto">
            <span class="text-gray-400 text-4xl">+</span>
          </div>
          <h3 class="text-xl font-semibold">No recent searches</h3>
          <p class="text-gray-500 mt-2 pb-10">Get started by creating a new search</p>
        </div>
      <% end %>
    </div>
  <% end %>
  <ul role="list" class="divide-y divide-gray-100 overflow-hidden bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-b-xl" id="weather_reports">
    <%= render @weather_reports %>
  </ul>
</div>