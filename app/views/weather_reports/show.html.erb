<div class="container">
  <div class="weather-report flex justify-center mt-20">
    <div class="col-span-1 flex flex-col divide-y divide-gray-200 rounded-lg bg-white text-center shadow w-80">
      <div class="flex flex-1 flex-col p-8">
        <img class="mx-auto h-32 w-32 flex-shrink-0 rounded-full drop-shadow-2xl" src=<%= "https://openweathermap.org/img/wn/#{@weather_report.icon}@2x.png" %>>
        <h3 class="text-sm font-medium text-gray-900 drop-shadow-lg"><%= "#{@weather_report.city}, #{@weather_report.state}" %></h3>
        <dl class="mt-1 flex flex-grow flex-col justify-between">
          <dd class="text-lg mt-4 drop-shadow-xl"><%= @weather_report.temperature_to_degrees %></dd>
          <dd class="text-sm text-gray-500 mt-6 drop-shadow-lg"><%= @weather_report.condition %></dd>
        </dl>
      </div>
      <div>
        <div class="-mt-px flex hover:bg-gray-100">
          <div class="flex w-0 flex-1">
            <a href="#" class="relative -mr-px inline-flex w-0 flex-1 items-center justify-center gap-x-3 rounded-bl-lg border border-transparent py-4 text-sm font-semibold text-gray-900">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
              </svg>
              Refresh
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="forecast flex justify-center mt-20">
    <%= render "weather_reports/forecast", forecast: @weather_report.forecast %>
  </div>
</div>