<div class="flow-root w-2/4">
  <h2 class="text-center text-gray-500 mb-20 drop-shadow-lg">Take a peek at the rest of the week</h2>
  <ul role="list" class="-mb-8">
    <% forecast.each_with_index do |daily_forecast, index| %>
      <li>
        <div class="relative pb-8">
          <% if forecast[index + 1] != nil %>
            <span class="absolute left-4 top-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
          <% end %>
          <div class="relative flex space-x-3">
            <div>
              <span class="h-8 w-8 rounded-full bg-gray-400 flex items-center justify-center ring-8 ring-white">
                <img class="mx-auto h-9 w-9 flex-shrink-0 rounded-full drop-shadow-2xl" src=<%= "https://openweathermap.org/img/wn/#{daily_forecast.icon}@2x.png" %>>
              </span>
            </div>
            <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
              <div>
                <p class="text-xs text-gray-700 mb-2"><%= daily_forecast.temperature_range %></p>
                <p class="text-sm text-gray-500"><%= daily_forecast.summary %></p>
              </div>
              <div class="whitespace-nowrap text-right text-sm text-gray-500">
                <p><%= daily_forecast.humanized_date %></p>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>